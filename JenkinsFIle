                }
            } 
        }
        stage('Building our image') { 
            steps { 
                script { 
                    sh 'docker-compose build --pull'
                }
            } 
        }
        stage('Deploy our image') { 
            steps { 
                script { 
                    sh 'docker-compose push'
                } 
